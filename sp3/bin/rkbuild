#!/bin/bash

set -e

if [ ! -e "asm.sh" ]; then
	echo "ERROR: Please enter Tensile's assembly directory first."
	exit -1
fi

BIN_DIR=$RKT_HOME_DIR/bin
export LD_LIBRARY_PATH=$BIN_DIR

if [ "$#" -eq "0" ]; then
	echo "Usage: rkbuild <inc_file_path>"
	exit -1
fi

KERNEL_FILE=`ls *.s`
KERNEL_NAME=${KERNEL_FILE%.*}

sed -i '/^.macro/,$d' $KERNEL_FILE
cat $1 >> $KERNEL_FILE

./asm.sh $KERNEL_NAME -mcpu=gfx908

cd ../../build && ./run.sh
cd -

